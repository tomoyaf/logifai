{
  "name": "logifai",
  "version": "0.1.0",
  "description": "Auto-capture development command output and search/analyze with Claude Code",
  "type": "module",
  "bin": {
    "logifai": "dist/cli.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Tomoya Fujita",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomoyaf/logifai.git"
  },
  "homepage": "https://github.com/tomoyaf/logifai#readme",
  "bugs": {
    "url": "https://github.com/tomoyaf/logifai/issues"
  },
  "files": [
    "dist",
    "!dist/__tests__",
    "!dist/tools",
    "skills",
    ".claude-plugin",
    "marketplace.json",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "test": "node --test dist/__tests__/*.test.js",
    "pretest": "tsc",
    "prepublishOnly": "npm run build && npm test",
    "generate-logs": "node dist/tools/log-generator.js"
  },
  "engines": {
    "node": ">=20"
  },
  "keywords": [
    "logging",
    "capture",
    "cli",
    "claude-code",
    "developer-tools"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.7.0"
  }
}
